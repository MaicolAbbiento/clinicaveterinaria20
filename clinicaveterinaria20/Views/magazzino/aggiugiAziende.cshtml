@model clinicaveterinaria20.Models.Brand

@{
    ViewBag.Title = "aggiugiAziende";
}
<style>
    #aggBrand {
        text-align: center;
        margin-bottom: 3px;
    }

    #datiBrand {
        text-align: center;
        margin-bottom: 3px;
    }

    #inpBrand {
        border-radius: 100px;
    }
</style>

<div>
    @Html.ActionLink("ᐊ", "Home", "Vendite", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 class="p-5 fw-semibold display-4">Aggiungi brand</h2>

@if (ViewBag.Errore != null)
{
    <p class="text-center text-danger fs-5 fst-italic p-3">@ViewBag.Errore</p>
}

@if (TempData["successo"] != null)
{
    <p class="text-center text-primary fs-5 fst-italic p-3">@TempData["successo"]</p>
}

<div class="position-relative mb-5">
    @using (Html.BeginForm("aggiugiAziende", "magazzino", FormMethod.Post, new { @class = "w-50 mx-auto" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label fw-semibold pb-2 " })
                <div class="w-100">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.piva, htmlAttributes: new { @class = "control-label fw-semibold pb-2 " })
                <div class="w-100">
                    @Html.EditorFor(model => model.piva, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                    @Html.ValidationMessageFor(model => model.piva, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.sedelegale, htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
                <div class="w-100">
                    @Html.EditorFor(model => model.sedelegale, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                    @Html.ValidationMessageFor(model => model.sedelegale, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.recapito, htmlAttributes: new { @class = "control-label fw-semibold pb-2 " })
                <div class="w-100">
                    @Html.EditorFor(model => model.recapito, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2" } })
                    @Html.ValidationMessageFor(model => model.recapito, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-5">
                <div class="w-100 text-center">
                    <input type="submit" value="Aggiungi" class="btn btn-light rounded-pill border-0 w-25 fw-semibold p-2 fs-5" />
                </div>
            </div>
        </div>
    }
    <div class="position-absolute bottom-0 ms-5" style="z-index:-1;">
        <img src="~/Content/img/pharmacy.svg" alt="pet" class="w-50" />
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
