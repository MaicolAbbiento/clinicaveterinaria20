@model clinicaveterinaria20.Models.Armadietti

@{
    ViewBag.Title = "aggiungiArmadio";
}
<style>
    #armCod{
        text-align:center;
        margin-bottom: 10px;
        
    }
    #formArm{
        border-radius: 100px;
    }

</style>

<div>
    @Html.ActionLink("ᐊ", "Home", "Vendite", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 id="armCod">Aggiungi nuovo armadietto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.codice, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.EditorFor(model => model.codice, new { htmlAttributes = new { @class = "form-control", id="formArm"} })
                @Html.ValidationMessageFor(model => model.codice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>@ViewBag.errore</div>
        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Aggiungi" class="btn btn-light rounded-pill border-0 w-100 fw-semibold p-2 mb-5 mt-3" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}