@model clinicaveterinaria20.Models.Armadietti

@{
    ViewBag.Title = "aggiungiArmadio";
}

<h2>Aggiungi nuovo armadietto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.codice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.codice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>@ViewBag.errore</div>
        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Aggiungi" class="btn btn-light rounded-pill border-0 w-25 fw-semibold p-2" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}