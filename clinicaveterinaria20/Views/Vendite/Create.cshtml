@model clinicaveterinaria20.Models.Vendita

@{
    ViewBag.Title = "Create";

}


@if (ViewBag.Errore != null)
{
    <p><strong>@ViewBag.Errore</strong></p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" form-horizontal " >


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container d-flex flex-column justify-content-center align-items-center"  >
        <div class="form-group">
            @Html.LabelFor(model => model.nricetta, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.nricetta, new { htmlAttributes = new { @class = "form-control inputCF", style="background-color:white" } })
                @Html.ValidationMessageFor(model => model.nricetta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quantita, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.quantita, new { htmlAttributes = new { @class = "form-control inputCF quantity", style="background-color:white;" } })
                @Html.ValidationMessageFor(model => model.quantita, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Prodotti, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DropDownListFor(model => model.idprodotto, new SelectList(ViewBag.Prodotti, "Value", "Text"), new { @class = "rounded w-50 border border-2 border-black text-center", id = "Prodotto" })
            </div>
        </div>

        <p> @ViewBag.errore</p>
        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Completa vendita" class="btn btnCF " style="color: #1e90ff;"/>
            </div>
            </div>
        </div>


    </div>

     
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}