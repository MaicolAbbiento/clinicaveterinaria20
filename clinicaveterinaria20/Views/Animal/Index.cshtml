@model IEnumerable<clinicaveterinaria20.Models.Animale>

@{
    ViewBag.Title = "Index";
}

@section styles{
    <link href="~/Content/listaAnimali.css" rel="stylesheet" />
}

<div>
    @Html.ActionLink("ᐊ", "Home", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 class="p-5 fw-semibold display-4">Anagrafica dei pet</h2>

@if (TempData["Successo"] != null)
{
    <p class="text-center text-primary fs-5 fst-italic p-3">@TempData["Successo"]</p>
}

<p class="text-center px-5 fs-1">
    @Html.ActionLink("Nuovo paziente", "Create", null, new {@class="btn btn-light rounded-pill px-5 fs-4 border-0"})
</p>

<div class="center color1">
    <div class="rowCenter flex-wrap gap-5">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="approach-wrapper">
                    <div class="aprroach-card">
                        <div>
                            <h2>
                                @item.nome
                            </h2>
                            <h4>
                                Specie: @item.tipo <img src="~/Content/img/Paw1.svg" alt="Alternate Text" style="width:10%" />
                            </h4>
                            @Html.ActionLink("Modifica", "Edit", new { id = item.idanimale }, new { @class = "button apprach-btn" })
                            @Html.ActionLink("Nuova visita", "CreateVisit", new { id = item.idanimale }, new { @class = "button apprach-btn" })
                            @Html.ActionLink("Cancella", "Delete", new { id = item.idanimale }, new { @class = "button apprach-btn" })
                        </div>

                    </div>
                </div>
            </div>
         }
    </div>
</div>

