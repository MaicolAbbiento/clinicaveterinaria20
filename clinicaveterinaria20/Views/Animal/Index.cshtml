@model IEnumerable<clinicaveterinaria20.Models.Animale>

@{
    ViewBag.Title = "Index";
}

@section styles{
    <link href="~/Content/listaAnimali.css" rel="stylesheet" />
    }

<h2 class="p-5 fw-semibold display-4">Anagrafica dei pet</h2>

<p class="text-center px-5 fs-1">
    @Html.ActionLink("Nuovo paziente", "Create", null, new {@class="text-light text-decoration-underline"})
</p>


<div class="center color1">
        <div class="rowCenter">
            @foreach (var item in Model)
            {
                <div class="colunm-3">
                    <div class="approach-wrapper">
                        <div class="aprroach-card">
                            <div>
                                <h2>
                                    @item.nome
                                </h2>
                                <h4>
                                    Specie: @item.tipo - Colore: @item.coloreMantello
                                </h4>
                                @Html.ActionLink("Modifica", "Edit", new { id = item.idanimale },new { @class = "btn apprach-btn" })
                                @Html.ActionLink("Anamnesi", "MedicalHistory", new { id = item.idanimale}, new { @class = "btn apprach-btn" })
                                @Html.ActionLink("Cancella", "Delete", new { id = item.idanimale}, new { @class = "btn apprach-btn" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    