@{
    ViewBag.Title = "Home";
}

<style>
    #animal-home {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        text-align: center;
        min-height: 30vh;
    }

    .btn:hover {
        background-color: #31afff !important;
        color: white !important;
    }
</style>

<h2 class="p-5 fw-semibold display-4">CLINICA VETERINARIA</h2>
<div class="d-flex align-items-center justify-content-center position-relative">
    <div id="animal-home" class="text-center">
        <div class="row mt-5 pt-5">
            <div class="col-md-6">
                @Html.ActionLink("Lista animali", "Index", null, new { @class = "btn btn-light btn-lg m-4 w-100 rounded-pill border-0" })
                @Html.ActionLink("Aggiungi nuovo animale", "Create", null, new { @class = "btn btn-light btn-lg m-4 w-100 rounded-pill border-0" })
                @Html.ActionLink("Cerca con microchip", "SearchByMNumber", null, new { @class = "btn btn-light btn-lg m-4 w-100 rounded-pill border-0" })
                @Html.ActionLink("Lista visite", "Index", "Appointment", null, new { @class = "btn btn-light btn-lg m-4 w-100 rounded-pill border-0" })
            </div>
        </div>
    </div>
    <div class="position-absolute bottom-0" style="right: 5%; z-index: -1;">
        <img src="~/Content/img/pet.svg" alt="pet"/>
    </div>
</div>
