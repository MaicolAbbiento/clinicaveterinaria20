﻿@model clinicaveterinaria20.Models.Visita

@{
    ViewBag.Title = "CreateVisit";
    var nomePaziente = ViewBag.NomePaziente as string;
}

<div>
    @Html.ActionLink("ᐊ", "Index", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2>Nuova visita per @nomePaziente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.esame, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.esame, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.esame, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cura, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cura, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cura, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.idanimale)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h3>Cronistoria medica</h3>
@if (ViewBag.Anamnesi != null && ViewBag.Anamnesi.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Data visita</th>
                <th>Esame obiettivo</th>
                <th>Descrizione cura</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visita in ViewBag.Anamnesi)
            {
                <tr>
                    <td>@visita.datavisita</td>
                    <td>@visita.esame</td>
                    <td>@visita.cura</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nessuna visita trovata per questo paziente</p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
