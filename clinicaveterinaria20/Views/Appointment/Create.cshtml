@model clinicaveterinaria20.Models.Visita

@{
    ViewBag.Title = "Create";
}

<div>
    @Html.ActionLink("ᐊ", "Index", "Appointment", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2 class="p-5 fw-semibold display-4">Nuova visita</h2>

@if (ViewBag.Errore != null)
{
    <p class="text-center text-danger fs-5 fst-italic p-3">@ViewBag.Errore</p>
}

<div class="position-relative">
    @using (Html.BeginForm("Create", "Appointment", FormMethod.Post, new { @class = "w-50 mx-auto my-5 pb-5" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.esame, htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
                <div class="w-100">
                    @Html.EditorFor(model => model.esame, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2", placeholder = "Descrizione della visita" } })
                    @Html.ValidationMessageFor(model => model.esame, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.cura, htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
                <div class="w-100">
                    @Html.EditorFor(model => model.cura, new { htmlAttributes = new { @class = "form-control w-100 rounded-pill p-2", placeholder = "Descrizione della terapia" } })
                    @Html.ValidationMessageFor(model => model.cura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.idanimale, "idanimale", htmlAttributes: new { @class = "control-label fw-semibold pb-2" })
                <div class="w-100">
                    @Html.DropDownList("idanimale", new SelectList(ViewBag.ListaAnimali, "Value", "Text"), htmlAttributes: new { @class = "form-control w-100 rounded-pill p-2 text-center" })
                    @Html.ValidationMessageFor(model => model.idanimale, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-5">
                <div class="w-100 text-center">
                    <input type="submit" value="Aggiungi" class="btn btn-light rounded-pill border-0 w-25 fw-semibold p-2 fs-5" />
                </div>
            </div>
        </div>
    }
    <div class="position-absolute bottom-0 opacity-25" style="z-index: -1; right: -10%;">
        <img src="~/Content/img/stetovet.svg" alt="Alternate Text" />
    </div>
</div>