@model clinicaveterinaria20.Models.Visita

@{
    ViewBag.Title = "Create";
}

<div>
    @Html.ActionLink("ᐊ", "Index", "Appointment", null, new { @class = "btn btn-light btn-lg m-4 rounded-pill border-0" })
</div>

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Visita</h4>
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.esame, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.esame, new { htmlAttributes = new { @class = "form-control", placeholder = "Descrizione della visita" } })
                @Html.ValidationMessageFor(model => model.esame, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cura, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.cura, new { htmlAttributes = new { @class = "form-control", placeholder = "Descrizione della terapia" } })
                @Html.ValidationMessageFor(model => model.cura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idanimale, "idanimale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.DropDownList("idanimale", new SelectList(ViewBag.ListaAnimali, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idanimale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

